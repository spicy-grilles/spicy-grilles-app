<section class="profile">




  <div class="aside">
    <div><img src="{{avatarPath}}" alt="avatar"></div>


    <form action="/newAvatar" method="POST" enctype="multipart/form-data">
      <input type="file" name="picture" id="picture">
      <div><button type="submit">Upload new avatar</button></div>
    </form>
  </div>

  <div class="container">
    <div>
      <h3>{{username}}</h3>
    </div>
    <div class="medals">Score
      <div>{{pointsGlobal}}</div>
    </div>
  </div>



</section>